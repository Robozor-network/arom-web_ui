    function LoadNewConfig(file){
        document.getElementById("config_location").value = file;

        var param_pymlab_cfg = new ROSLIB.Param({
          ros : ros,
          name: '/arom/node/pymlab_node/feature/pymlab_structure/cfg'
        });
        param_pymlab_cfg.set(file);
        location.reload();
    }

