        $.ajax({
            type: 'PUT',
            dataType: 'json',
            url: "/api/upload/"+document.getElementById("config_location").value,
            headers: {"X-HTTP-Method-Override": "PUT"},
            data: document.getElementById("json_whole").value
        });
        location.reload();
    });

    $('#btn-initPymlabAccepted').on('click', function(){
