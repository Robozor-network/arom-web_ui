

<div class="col-xs-6 col-sm-6 col-md-5 col-lg-4 col-xl-3">
<div class="card">
    <div class="card-header primary-color white-text">Beeper</div>
    <div class="card-block"> 


		{% for i, type in enumerate(FeatureParams['types']) %}
			<button type="button" class="form-control btn btn-sm btn-secondary" onclick="makeSound('{{type}}')">{{type}}</button><br><br>
		{% end %}

</div>
</div>


<script type="text/javascript">

var sendCtrl = new ROSLIB.Topic({
    ros : ros,
    name : '/beeper/preset',
    messageType : 'std_msgs/String'
});
    
function makeSound(arg) {
    var msg = new ROSLIB.Message({
        data:  arg
    });
    sendCtrl.publish(msg);
};

</script>